{  
  "compilerOptions": {  
    "target": "ES2022",  
    "module": "commonjs",  
    "strict": true,  
    "esModuleInterop": true,  
    "experimentalDecorators": true,  
    "emitDecoratorMetadata": true,  
    "skipLibCheck": true,  
    "forceConsistentCasingInFileNames": true,  
    "outDir": "./dist",  
    "rootDir": "./src",  
    "baseUrl": "./src",  
    "paths": {  
      "@/*": ["./*"]  
    }  
  }  
}
